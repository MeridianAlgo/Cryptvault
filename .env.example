# CryptVault Docker Environment Configuration
# Copy this file to .env and configure your settings

# ============================================================================
# Application Environment
# ============================================================================
CRYPTVAULT_ENV=production
# Options: development, testing, production

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# API Keys (Optional)
# ============================================================================
# CryptoCompare API Key (optional - for enhanced data access)
CRYPTOCOMPARE_API_KEY=

# Alpha Vantage API Key (optional - for stock data)
ALPHA_VANTAGE_API_KEY=

# ============================================================================
# Cache Configuration
# ============================================================================
# Enable/disable caching
CACHE_ENABLED=true

# Cache time-to-live in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ============================================================================
# Machine Learning Configuration
# ============================================================================
# Enable/disable ML predictions
ML_ENABLED=true

# Path to ML models (inside container)
ML_MODEL_PATH=/app/data/models

# ============================================================================
# Performance Configuration
# ============================================================================
# Number of worker threads for parallel processing
WORKER_THREADS=4

# Maximum memory usage (for resource-constrained environments)
MAX_MEMORY_MB=2048

# ============================================================================
# Data Source Configuration
# ============================================================================
# Preferred data source priority (comma-separated)
DATA_SOURCE_PRIORITY=yfinance,ccxt,cryptocompare

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
RETRY_ATTEMPTS=3

# ============================================================================
# Feature Flags
# ============================================================================
# Enable pattern detection
ENABLE_PATTERNS=true

# Enable technical indicators
ENABLE_INDICATORS=true

# Enable ML predictions
ENABLE_ML_PREDICTIONS=true

# Enable chart generation
ENABLE_CHARTS=true
