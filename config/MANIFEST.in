# MANIFEST.in - Specifies additional files to include in source distributions

# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include setup.py
include setup.cfg

# Include requirements files
recursive-include requirements *.txt
include requirements/README.md

# Include configuration examples
recursive-include config *.yaml *.yml *.env.example

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include examples
recursive-include examples *.py

# Include scripts
recursive-include scripts *.sh *.bat *.ps1 *.py

# Include type information
include cryptvault/py.typed

# Include tests (for source distributions)
recursive-include tests *.py

# Exclude compiled Python files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib

# Exclude development files
exclude .gitignore
exclude .pylintrc
exclude mypy.ini
exclude pytest.ini
exclude .pre-commit-config.yaml

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune .tox

# Exclude IDE files
prune .vscode
prune .idea
global-exclude .DS_Store

# Exclude logs and cache
prune logs
prune .cryptvault_predictions
