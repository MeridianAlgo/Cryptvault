# CryptVault Environment Configuration
# Copy this file to .env and add your API keys

# =============================================================================
# API Keys (Optional - CryptVault works without these using free tiers)
# =============================================================================

# CoinGecko Pro API (Optional - for higher rate limits)
# Get from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your_coingecko_api_key_here

# Binance API (Optional - for direct exchange data)
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Coinbase Pro API (Optional - for professional exchange data)
# Get from: https://pro.coinbase.com/profile/api
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Alpha Vantage API (Optional - for additional data sources)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# CryptVault Configuration
# =============================================================================

# Default analysis settings
DEFAULT_DAYS=30
DEFAULT_INTERVAL=1d
DEFAULT_SENSITIVITY=0.5

# ML Model settings
ENABLE_PYTORCH=true
ENABLE_ENSEMBLE=true
LSTM_SEQUENCE_LENGTH=60
HIDDEN_UNITS=128

# API Settings
API_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT_DELAY=1.0

# Logging
LOG_LEVEL=WARNING
ENABLE_FILE_LOGGING=true

# =============================================================================
# Advanced Settings (Optional)
# =============================================================================

# Pattern detection
MIN_PATTERN_CONFIDENCE=0.6
MAX_PATTERNS_PER_TYPE=5
ENABLE_VOLUME_CONFIRMATION=true

# Chart rendering
CHART_WIDTH=80
CHART_HEIGHT=20
ENABLE_COLORS=true

# Data storage
SAVE_ANALYSIS_RESULTS=false
RESULTS_DIRECTORY=./results

# Performance
ENABLE_CACHING=true
CACHE_DURATION_MINUTES=5