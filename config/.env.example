# CryptVault Environment Variables
# Copy this file to .env and fill in your values

# Environment (development, testing, production)
CRYPTVAULT_ENV=production

# Network Configuration
CRYPTVAULT_NETWORK_TIMEOUT=30
CRYPTVAULT_NETWORK_MAX_RETRIES=3

# Cache Configuration
CRYPTVAULT_CACHE_ENABLED=true
CRYPTVAULT_CACHE_TTL=300

# Logging Configuration
CRYPTVAULT_LOG_LEVEL=INFO
CRYPTVAULT_LOG_FILE=logs/cryptvault.log

# Analysis Configuration
CRYPTVAULT_DEFAULT_DAYS=60
CRYPTVAULT_ML_ENABLED=true

# API Keys (Optional)
# CryptoCompare API Key (get from https://www.cryptocompare.com/cryptopian/api-keys)
CRYPTOCOMPARE_API_KEY=

# Alpha Vantage API Key (optional, for additional data sources)
ALPHAVANTAGE_API_KEY=

# Polygon.io API Key (optional, for additional data sources)
POLYGON_API_KEY=
